@namespace BootstrapBlazor.Components
@inherits ButtonUploadBase

@if (Style == UploadStyle.Avatar)
{
    <AvatarUpload AdditionalAttributes="@AdditionalAttributes" Accept="@Accept" DefaultFileList="@DefaultFileList" DisplayText="@DisplayText" IsDisabled="@IsDisabled" IsCircle="@IsCircle" ShowLabel="@ShowLabel" ShowProgress="@ShowProgress"  />
}
else if (Style == UploadStyle.ClickToUpload)
{
    <ButtonUpload />
}
else if (Style == UploadStyle.Card)
{
    <CardUpload />
}
else
{
    <InputUpload DisplayText="@DisplayText" />
}
